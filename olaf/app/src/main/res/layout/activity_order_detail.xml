<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <include layout="@layout/layout_toolbar_shoukuan"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_order_detail"
                            android:text="0.01"
                            android:textSize="@dimen/public_margin_large"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_order_detail"
                            android:text="¥"
                            android:textSize="@dimen/public_margin_large"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付渠道："
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:id="@+id/tx_payChannel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付宝"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"/>

                    </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交易类型："
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tx_tradeType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫码支付"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shoukuanmingxi"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="收款明细："
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单金额"
                        android:layout_alignRight="@id/shoukuanmingxi"/>

                    <TextView
                        android:id="@+id/totalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.01"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shoukuanmingxi2"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家实收"
                        android:layout_alignRight="@id/shoukuanmingxi2"/>

                    <TextView
                        android:id="@+id/receiptAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.01"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shoukuanmingxi3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="76dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="顾客实付(开票金额)"
                        android:layout_alignRight="@id/shoukuanmingxi3"/>

                    <TextView
                        android:id="@+id/buyerPayAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.01"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/shoukuanxinxi"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="收款信息："
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="终端信息"
                        android:layout_alignRight="@id/shoukuanxinxi"/>

                    <TextView
                        android:id="@+id/terminalId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MBL@3333"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shoukuanxinxi2"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收银员编号"
                        android:layout_alignRight="@id/shoukuanxinxi2"/>

                    <TextView
                        android:id="@+id/operatorId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shoukuanxinxi3"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收银员姓名"
                        android:layout_alignRight="@id/shoukuanxinxi3"/>

                    <TextView
                        android:id="@+id/operatorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王二"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"/>


                </RelativeLayout>

                <View
                    style="@style/line_h"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_label_color2"
                        android:text="创建时间:"/>

                    <TextView
                        android:id="@+id/createDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label_color2"
                        android:layout_marginLeft="10dp"
                        android:text="2017-02-09 12:59:59"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label_color2"
                        android:layout_marginLeft="10dp"
                        android:text="付款时间:"/>



                    <TextView
                        android:id="@+id/endDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label_color2"
                        android:layout_marginLeft="10dp"
                        android:text="2017-02-09 12:59:59"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_label_color2"
                        android:text="交易号    :"/>

                    <TextView
                        android:id="@+id/tx_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label_color2"
                        android:layout_marginLeft="10dp"
                        android:text="23454545454545545454"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_label_color2"
                        android:text="订单号    :"/>
                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_label_color2"
                        android:text="23454545454545545454"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_label_color2"
                        android:text="备注        :"/>

                    <TextView
                        android:id="@+id/attach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_label_color2"
                        android:layout_marginLeft="10dp"
                        android:text="无"/>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_bottom_bg"
        android:layout_gravity="bottom"
        />
</android.support.design.widget.CoordinatorLayout>