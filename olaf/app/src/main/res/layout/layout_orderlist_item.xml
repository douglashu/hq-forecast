<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white_block_bg"
                android:orientation="vertical">


        <LinearLayout
            android:id="@+id/tradeTimeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="7">
            <LinearLayout
                android:id="@+id/imagelayout"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <ImageView
                android:id="@+id/bankIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_jinjian"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/tradeTimeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tradeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/tradeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/font_size_12"/>


                <TextView
                    android:id="@+id/operatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/font_size_12"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

            <TextView
                android:id="@+id/amount"
                android:layout_toRightOf="@+id/tradeTimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/payChannel"
                android:layout_toRightOf="@+id/tradeTimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amount"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/font_size_14"/>

            </LinearLayout>

            <TextView
                android:layout_weight="2"
                android:id="@+id/tradeStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/font_size_15"
                android:textColor="@color/black" />

        </LinearLayout>



    <View
        style="@style/line_h"/>


</LinearLayout>