<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whitesmoke"
              android:baselineAligned="false"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/merchantPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user2x" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/operatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="蒋运龙"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/roleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="6dp"
                android:text="老板"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="18273191211"
            android:textColor="#B3E0F6"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <com.hq.app.olaf.ui.widget.MenuItemView
                android:id="@+id/merchantInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:itemText="营业信息"
                app:showRight="true"
                app:menuTo="com.hq.app.olaf.ui.activity.about.MerchantInfoActivity"/>

            <com.hq.app.olaf.ui.widget.MenuItemView
                android:id="@+id/prod_signs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:itemText="签约信息"
                app:showRight="true"
                app:menuTo="com.hq.app.olaf.ui.activity.about.ProSignsActivity"/>

            <com.hq.app.olaf.ui.widget.MenuItemView
                android:id="@+id/device_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:itemText="我的设备"
                app:showRight="true"
                app:menuTo="com.hq.app.olaf.ui.activity.about.StoreCodesActivity"/>

            <com.hq.app.olaf.ui.widget.MenuItemView
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:itemText="设置"
                app:showRight="true"
                app:menuTo="com.hq.app.olaf.ui.activity.SetActivity"/>

            <com.hq.app.olaf.ui.widget.MenuItemView
                android:id="@+id/aboutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:itemText="关于"
                app:showRight="true"
                app:menuTo="com.hq.app.olaf.ui.activity.AboutActivity"/>

        </LinearLayout>



    </ScrollView>


</LinearLayout>